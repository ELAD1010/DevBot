{
  "name": "discord-dev-bot",
  "version": "1.0.0",
  "description": "Discord bot which notify about github and jira events",
  "main": "index.ts",
  "scripts": {
    "start": "npm run build && node build/index.js",
    "start:dev": "npx nodemon --quiet",
    "start:prod": "node build/index",
    "build": "rimraf ./build && tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ELAD1010/DevBot.git"
  },
  "author": "Elad Toledo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ELAD1010/DevBot/issues"
  },
  "homepage": "https://github.com/ELAD1010/DevBot#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
